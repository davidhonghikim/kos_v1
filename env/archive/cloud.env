# =============================================================================
# kOS v1 Cloud Deployment Configuration
# =============================================================================
# Cloud-specific settings for production deployments
# =============================================================================

# =============================================================================
# CLOUD PROVIDER SETTINGS
# =============================================================================

# Cloud Provider (aws, gcp, azure, digitalocean, etc.)
KOS_CLOUD_PROVIDER=

# Cloud Region
KOS_CLOUD_REGION=

# Cloud Project ID (GCP) or Account ID (AWS)
KOS_CLOUD_PROJECT_ID=

# =============================================================================
# NETWORK CONFIGURATION
# =============================================================================

# Public IP Address (auto-detected or manually set)
KOS_PUBLIC_IP=

# Domain Name (if using custom domain)
KOS_DOMAIN_NAME=

# SSL Certificate Provider (letsencrypt, manual, cloud)
KOS_SSL_PROVIDER=

# =============================================================================
# STORAGE CONFIGURATION
# =============================================================================

# Cloud Storage Bucket Name
KOS_STORAGE_BUCKET=

# Cloud Storage Region
KOS_STORAGE_REGION=

# Backup Storage Bucket
KOS_BACKUP_BUCKET=

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Use Cloud Database (true/false)
KOS_USE_CLOUD_DATABASE=false

# Cloud PostgreSQL Instance
KOS_CLOUD_POSTGRES_INSTANCE=

# Cloud Redis Instance
KOS_CLOUD_REDIS_INSTANCE=

# Cloud Elasticsearch Instance
KOS_CLOUD_ELASTICSEARCH_INSTANCE=

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================

# Cloud Monitoring Service
KOS_CLOUD_MONITORING=

# Cloud Logging Service
KOS_CLOUD_LOGGING=

# Cloud Alerting Service
KOS_CLOUD_ALERTING=

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Cloud Secret Management Service
KOS_CLOUD_SECRETS=

# Cloud IAM Role
KOS_CLOUD_IAM_ROLE=

# Cloud Security Group
KOS_CLOUD_SECURITY_GROUP=

# =============================================================================
# SCALING CONFIGURATION
# =============================================================================

# Auto-scaling enabled
KOS_AUTO_SCALING=false

# Minimum instances
KOS_MIN_INSTANCES=1

# Maximum instances
KOS_MAX_INSTANCES=3

# Target CPU utilization
KOS_TARGET_CPU_UTILIZATION=70

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================

# Automated backup enabled
KOS_AUTO_BACKUP=false

# Backup retention days
KOS_BACKUP_RETENTION_DAYS=30

# Backup schedule (cron format)
KOS_BACKUP_SCHEDULE="0 2 * * *"

# =============================================================================
# CDN CONFIGURATION
# =============================================================================

# CDN enabled
KOS_CDN_ENABLED=false

# CDN provider
KOS_CDN_PROVIDER=

# CDN domain
KOS_CDN_DOMAIN=

# =============================================================================
# LOAD BALANCER CONFIGURATION
# =============================================================================

# Load balancer enabled
KOS_LOAD_BALANCER=false

# Load balancer health check path
KOS_LB_HEALTH_CHECK_PATH=/health

# Load balancer health check port
KOS_LB_HEALTH_CHECK_PORT=8000

# =============================================================================
# CONTAINER REGISTRY
# =============================================================================

# Container registry URL
KOS_CONTAINER_REGISTRY=

# Container registry username
KOS_REGISTRY_USERNAME=

# Container registry password
KOS_REGISTRY_PASSWORD=

# =============================================================================
# ENVIRONMENT SPECIFIC
# =============================================================================

# Environment (development, staging, production)
KOS_ENVIRONMENT=development

# Debug mode
KOS_DEBUG=false

# Log level
KOS_LOG_LEVEL=INFO 